<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.source</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.dataType>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.contentType</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getDataTypes</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.dataType>
					<settings.columns>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.columns</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getColumns</itemsProcFunc>
								<size>10</size>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.columns>
					<settings.selection>
						<TCEforms>
							<displayCond>USER:Fab\VidiFrontend\Backend\DisplayCondition->hasSelection</displayCond>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.selection</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getSelections</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.selection>
					<settings.additionalEquals>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.additionalEquals</label>
							<config>
								<type>text</type>
								<rows>5</rows>
								<cols>30</cols>
								<default><![CDATA[# Example for Files (sys_file):
# storage = 1,
# identifier like /images/%,
# metadata.categories = 1

# Example for Frontend Users (fe_users):
# usergroup.uid = 1,2
# lastname like customer%
]]></default>
							</config>
						</TCEforms>
					</settings.additionalEquals>
					<settings.limit>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.limit</label>
							<config>
								<type>input</type>
								<default>10</default>
							</config>
						</TCEforms>
					</settings.limit>
					<settings.sorting>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.sorting</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.sorting>
					<settings.direction>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.direction</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">ASC</numIndex>
										<numIndex index="1">ASC</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">DESC</numIndex>
										<numIndex index="1">DESC</numIndex>
									</numIndex>
								</items>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.direction>
					<settings.enableFields>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.enableFields</label>
							<config>
								<type>user</type>
								<renderType>vidiFrontendEnableFields</renderType>
							</config>
						</TCEforms>
					</settings.enableFields>
				</el>
			</ROOT>
		</general>

		<facet>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.facets</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.facets>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.filters</label>
							<config>
								<type>select</type>
								<renderType>selectCheckBox</renderType>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getFacets</itemsProcFunc>
								<size>10</size>
								<minitems>0</minitems>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.facets>
				</el>
			</ROOT>
		</facet>
		<listView>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.listView
					</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
                    <settings.templateList>
                        <TCEforms>
                            <label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.templateForListView</label>
                            <config>
                                <type>user</type>
								<renderType>vidiFrontendTemplateMenu</renderType>
                            </config>
                        </TCEforms>
                    </settings.templateList>
					<settings.additionalSettingsList>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.additionalSettings</label>
							<config>
								<type>text</type>
								<rows>5</rows>
								<cols>30</cols>
							</config>
						</TCEforms>
					</settings.additionalSettingsList>
					<settings.additionalSettingsListHelp>
						<TCEforms>
							<config>
								<type>user</type>
								<renderType>vidiFrontendAdditionalSettingsListHelpListTemplates</renderType>
							</config>
						</TCEforms>
					</settings.additionalSettingsListHelp>
				</el>
			</ROOT>
		</listView>
		<detailView>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.detailView
					</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.templateDetail>
						<TCEforms>
							<label>
								LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.templateForDetailView
							</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getTemplates</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.templateDetail>
					<settings.targetPageDetail>
						<TCEforms>
							<label>
								LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.targetPageDetail
							</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</settings.targetPageDetail>
					<settings.additionalSettingsDetail>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.additionalSettings</label>
							<config>
								<type>text</type>
								<rows>5</rows>
								<cols>30</cols>
							</config>
						</TCEforms>
					</settings.additionalSettingsDetail>
					<settings.additionalSettingsDetailHelp>
						<TCEforms>
							<config>
								<type>user</type>
								<renderType>vidiFrontendAdditionalSettingsListHelpTemplates</renderType>
							</config>
						</TCEforms>
					</settings.additionalSettingsDetailHelp>
				</el>
			</ROOT>
		</detailView>

	</sheets>

</T3DataStructure>
