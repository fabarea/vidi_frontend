<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.source</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.dataType>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.contentType</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getDataTypes</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.dataType>
					<settings.columns>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.columns</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getColumns</itemsProcFunc>
								<size>10</size>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.columns>
					<settings.selection>
						<TCEforms>
							<displayCond>USER:Fab\VidiFrontend\Backend\DisplayCondition->hasSelection</displayCond>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.selection</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getSelections</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.selection>
					<settings.additionalEquals>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.additionalEquals</label>
							<config>
								<type>text</type>
								<rows>5</rows>
								<cols>30</cols>
								<default><![CDATA[# Example for Files (sys_file):
# storage = 1,
# identifier like /images/%,
# metadata.categories = 1

# Example for Frontend Users (fe_users):
# usergroup.uid = 1,2
# lastname like customer%
]]></default>
							</config>
						</TCEforms>
					</settings.additionalEquals>
					<settings.limit>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.limit</label>
							<config>
								<type>input</type>
								<default>10</default>
							</config>
						</TCEforms>
					</settings.limit>
					<settings.sorting>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.sorting</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.sorting>
					<settings.direction>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.direction</label>
							<config>
								<type>select</type>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">ASC</numIndex>
										<numIndex index="1">ASC</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">DESC</numIndex>
										<numIndex index="1">DESC</numIndex>
									</numIndex>
								</items>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.direction>
					<settings.enableFields>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.enableFields</label>
							<config>
								<type>user</type>
								<userFunc>Fab\VidiFrontend\Backend\TceForms->getEnableFields</userFunc>
							</config>
						</TCEforms>
					</settings.enableFields>
				</el>
			</ROOT>
		</general>
		<grid>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.grid</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.loadContentByAjax>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.loadContentByAjax</label>
							<config>
								<type>check</type>
								<default>0</default>
							</config>
						</TCEforms>
					</settings.loadContentByAjax>
					<settings.defaultNumberOfItems>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.numberOfItems</label>
							<config>
								<type>input</type>
								<default>10, 20, 50, 100, -1</default>
							</config>
						</TCEforms>
					</settings.defaultNumberOfItems>
					<settings.gridClassName>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.gridClassName</label>
							<config>
								<type>input</type>
								<default>table table-striped table-hover</default>
							</config>
						</TCEforms>
					</settings.gridClassName>
					<settings.hasColumnHeaders>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.hasColumnHeaders</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.hasColumnHeaders>
					<settings.gridConfiguration>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.gridConfiguration</label>
							<config>
								<type>user</type>
								<userFunc>Fab\VidiFrontend\Backend\TceForms->renderGridConfigurationField</userFunc>
							</config>
						</TCEforms>
					</settings.gridConfiguration>
				</el>
			</ROOT>
		</grid>

		<facet>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.facets</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.isVisualSearchBar>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.isVisualSearchBar
							</label>
							<config>
								<type>user</type>
								<userFunc>Fab\VidiFrontend\Backend\TceForms->renderIsVisualSearchBarField</userFunc>
								<!--<type>check</type>-->
								<!--<default>0</default>-->
							</config>
						</TCEforms>
					</settings.isVisualSearchBar>
					<settings.facets>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.facets</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getFacets</itemsProcFunc>
								<size>10</size>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.facets>
					<settings.logicalSeparator>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.logicalSeparator</label>
							<config>
								<type>select</type>
								<maxitems>1</maxitems>
								<items>
									<numIndex index="1" type="array">
										<numIndex index="0">AND</numIndex>
										<numIndex index="1">logicalAnd</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">OR</numIndex>
										<numIndex index="1">logicalOr</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.logicalSeparator>
				</el>
			</ROOT>
		</facet>
		<detailView>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.detailView
					</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.templateDetail>
						<TCEforms>
							<label>
								LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.templateForDetailView
							</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getTemplates</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.templateDetail>
					<settings.hasClickOnRow>
						<TCEforms>
							<label>
								LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.hasClickOnRow
							</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.hasClickOnRow>
					<settings.targetPageDetail>
						<TCEforms>
							<label>
								LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.targetPageDetail
							</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
						</TCEforms>
					</settings.targetPageDetail>
					<settings.parameterPrefix>
						<TCEforms>
							<label>
								LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.parameterPrefix
							</label>
							<config>
								<type>input</type>
							</config>
						</TCEforms>
					</settings.parameterPrefix>
				</el>
			</ROOT>
		</detailView>
		<massActions>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:flexform.tab.massActions
					</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.actions>
						<TCEforms>
							<label>LLL:EXT:vidi_frontend/Resources/Private/Language/locallang.xlf:settings.actions</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\VidiFrontend\Backend\TceForms->getActions</itemsProcFunc>
								<size>10</size>
								<maxitems>100</maxitems>
							</config>
						</TCEforms>
					</settings.actions>
				</el>
			</ROOT>
		</massActions>
	</sheets>

</T3DataStructure>